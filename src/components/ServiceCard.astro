---
interface Props {
  title: string;
  description: string;
  icon: string;
}

const { title, description, icon } = Astro.props;
---

<div class="fade-in group rounded-xl border border-gray-100 bg-white p-6 shadow-sm transition-all hover:shadow-md hover:border-primary-200">
  <div class="mb-4 inline-flex h-12 w-12 items-center justify-center rounded-lg bg-primary-50 text-2xl text-primary-600 transition-colors group-hover:bg-primary-100">
    <Fragment set:html={icon} />
  </div>
  <h3 class="text-lg font-semibold text-navy-900">{title}</h3>
  <p class="mt-2 text-sm leading-relaxed text-gray-600">{description}</p>
</div>
