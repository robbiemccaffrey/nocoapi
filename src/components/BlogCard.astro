---
interface Props {
  title: string;
  description: string;
  slug: string;
  publishDate: Date;
  category: string;
}

const { title, description, slug, publishDate, category } = Astro.props;

const formattedDate = publishDate.toLocaleDateString('en-IE', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});
---

<article class="fade-in group overflow-hidden rounded-xl border border-gray-100 bg-white shadow-sm transition-all hover:shadow-md hover:border-primary-200">
  <div class="h-40 bg-gradient-to-br from-navy-900 to-primary-800 flex items-center justify-center">
    <span class="text-sm font-semibold uppercase tracking-wider text-primary-300">{category}</span>
  </div>
  <div class="p-6">
    <time class="text-xs font-medium text-gray-500">{formattedDate}</time>
    <h3 class="mt-2 text-lg font-semibold text-navy-900 group-hover:text-primary-600 transition-colors">
      <a href={`/blog/${slug}`}>{title}</a>
    </h3>
    <p class="mt-2 text-sm leading-relaxed text-gray-600 line-clamp-2">{description}</p>
    <a href={`/blog/${slug}`} class="mt-4 inline-block text-sm font-medium text-primary-600 hover:text-primary-800 transition-colors">
      Read More &rarr;
    </a>
  </div>
</article>
