---
interface Props {
  quote: string;
  name: string;
  role: string;
}

const { quote, name, role } = Astro.props;
---

<div class="fade-in rounded-xl bg-white p-6 shadow-sm border border-gray-100">
  <div class="mb-4 text-primary-400">
    <svg class="h-8 w-8" fill="currentColor" viewBox="0 0 24 24">
      <path d="M14.017 21v-7.391c0-5.704 3.731-9.57 8.983-10.609l.995 2.151c-2.432.917-3.995 3.638-3.995 5.849h4v10H14.017zM0 21v-7.391c0-5.704 3.731-9.57 8.983-10.609l.995 2.151C7.546 6.068 5.983 8.789 5.983 11H10v10H0z" />
    </svg>
  </div>
  <p class="text-gray-600 leading-relaxed">{quote}</p>
  <div class="mt-4 border-t border-gray-100 pt-4">
    <p class="font-semibold text-navy-900">{name}</p>
    <p class="text-sm text-gray-500">{role}</p>
  </div>
</div>
