---

<section class="relative overflow-hidden bg-gradient-to-br from-navy-950 via-navy-900 to-primary-900 py-24 sm:py-32">
  <div class="absolute inset-0 bg-[radial-gradient(ellipse_at_top_right,_var(--color-primary-800)_0%,_transparent_50%)] opacity-30"></div>
  <div class="relative mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <div class="grid grid-cols-1 gap-12 lg:grid-cols-2 lg:items-center">
      <!-- Text -->
      <div class="text-center lg:text-left">
        <h1 class="text-4xl font-extrabold tracking-tight text-white sm:text-5xl lg:text-6xl">
          Websites that <span class="text-primary-400">work</span> for your business
        </h1>
        <p class="mt-6 text-lg leading-relaxed text-gray-300 sm:text-xl">
          Professional web design and development for businesses that want to grow online. Fast, modern, and built to convert visitors into customers.
        </p>
        <div class="mt-10 flex flex-col gap-4 sm:flex-row sm:justify-center lg:justify-start">
          <a
            href="/projects"
            class="rounded-lg bg-primary-600 px-6 py-3 text-base font-semibold text-white shadow-lg transition-all hover:bg-primary-500 hover:shadow-xl"
          >
            View My Work
          </a>
          <a
            href="/contact"
            class="rounded-lg border border-gray-500 bg-transparent px-6 py-3 text-base font-semibold text-white transition-all hover:border-white hover:bg-white/10"
          >
            Get in Touch
          </a>
        </div>
      </div>

      <!-- Illustration -->
      <div class="hidden lg:flex items-center justify-center">
        <div class="w-full max-w-lg">
          <svg viewBox="0 0 480 340" fill="none" xmlns="http://www.w3.org/2000/svg" class="w-full h-auto drop-shadow-2xl">
            <!-- Browser window -->
            <rect x="20" y="20" width="440" height="300" rx="12" fill="white" opacity="0.95"/>
            <rect x="20" y="20" width="440" height="40" rx="12 12 0 0" fill="#f1f5f9"/>
            <rect x="20" y="48" width="440" height="12" fill="#f1f5f9"/>
            <circle cx="46" cy="40" r="6" fill="#fca5a5"/>
            <circle cx="66" cy="40" r="6" fill="#fde68a"/>
            <circle cx="86" cy="40" r="6" fill="#86efac"/>
            <rect x="160" y="33" width="160" height="14" rx="7" fill="#e2e8f0"/>

            <!-- Nav bar -->
            <rect x="40" y="72" width="420" height="28" rx="0" fill="white"/>
            <rect x="50" y="78" width="50" height="12" rx="3" fill="#1e3a5f" opacity="0.8"/>
            <rect x="280" y="80" width="36" height="8" rx="2" fill="#94a3b8"/>
            <rect x="324" y="80" width="36" height="8" rx="2" fill="#94a3b8"/>
            <rect x="368" y="80" width="36" height="8" rx="2" fill="#94a3b8"/>
            <rect x="414" y="76" width="36" height="16" rx="4" fill="#2563eb"/>

            <!-- Hero section inside browser -->
            <rect x="40" y="100" width="420" height="120" rx="0" fill="linear" />
            <defs>
              <linearGradient id="heroGrad" x1="40" y1="100" x2="460" y2="220">
                <stop offset="0%" stop-color="#1e3a5f"/>
                <stop offset="100%" stop-color="#1e40af"/>
              </linearGradient>
            </defs>
            <rect x="40" y="100" width="420" height="120" fill="url(#heroGrad)"/>
            <rect x="70" y="120" width="200" height="14" rx="3" fill="white" opacity="0.9"/>
            <rect x="70" y="142" width="260" height="8" rx="2" fill="white" opacity="0.4"/>
            <rect x="70" y="156" width="220" height="8" rx="2" fill="white" opacity="0.4"/>
            <rect x="70" y="176" width="80" height="28" rx="6" fill="#3b82f6"/>
            <rect x="160" y="176" width="80" height="28" rx="6" fill="transparent" stroke="white" stroke-opacity="0.4" stroke-width="1.5"/>

            <!-- Content cards -->
            <rect x="50" y="232" width="120" height="76" rx="8" fill="#f8fafc" stroke="#e2e8f0" stroke-width="1"/>
            <rect x="66" y="246" width="40" height="40" rx="6" fill="#dbeafe"/>
            <circle cx="86" cy="266" r="12" fill="#93c5fd" opacity="0.6"/>
            <rect x="66" y="292" width="88" height="6" rx="2" fill="#cbd5e1"/>

            <rect x="182" y="232" width="120" height="76" rx="8" fill="#f8fafc" stroke="#e2e8f0" stroke-width="1"/>
            <rect x="198" y="246" width="40" height="40" rx="6" fill="#dbeafe"/>
            <circle cx="218" cy="266" r="12" fill="#93c5fd" opacity="0.6"/>
            <rect x="198" y="292" width="88" height="6" rx="2" fill="#cbd5e1"/>

            <rect x="314" y="232" width="120" height="76" rx="8" fill="#f8fafc" stroke="#e2e8f0" stroke-width="1"/>
            <rect x="330" y="246" width="40" height="40" rx="6" fill="#dbeafe"/>
            <circle cx="350" cy="266" r="12" fill="#93c5fd" opacity="0.6"/>
            <rect x="330" y="292" width="88" height="6" rx="2" fill="#cbd5e1"/>

            <!-- Floating elements -->
            <g opacity="0.15">
              <circle cx="420" cy="140" r="30" fill="#60a5fa"/>
              <circle cx="400" cy="160" r="20" fill="#3b82f6"/>
            </g>
          </svg>
        </div>
      </div>
    </div>
  </div>
</section>
