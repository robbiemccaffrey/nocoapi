---
interface Props {
  title: string;
  description: string;
  tags: string[];
  slug: string;
  liveUrl?: string;
  thumbnail?: string;
}

const { title, description, tags, slug, liveUrl, thumbnail } = Astro.props;
---

<div class="fade-in group overflow-hidden rounded-xl border border-gray-100 bg-white shadow-sm transition-all hover:shadow-md hover:border-primary-200">
  {thumbnail ? (
    <div class="h-48 overflow-hidden">
      <img src={thumbnail} alt={title} width="800" height="400" decoding="async" class="h-full w-full object-cover object-top transition-transform duration-300 group-hover:scale-105" loading="lazy" />
    </div>
  ) : (
    <div class="h-48 bg-gradient-to-br from-primary-100 to-primary-50 flex items-center justify-center">
      <span class="text-4xl font-bold text-primary-300 font-[family-name:var(--font-display)]">{title.charAt(0)}</span>
    </div>
  )}
  <div class="p-6">
    <h3 class="text-lg font-semibold text-navy-900 group-hover:text-primary-600 transition-colors">
      <a href={`/projects/${slug}`}>{title}</a>
    </h3>
    <p class="mt-2 text-sm leading-relaxed text-gray-600 line-clamp-2">{description}</p>
    <div class="mt-4 flex flex-wrap gap-2">
      {tags.slice(0, 3).map((tag) => (
        <span class="rounded-full bg-gray-100 px-3 py-1 text-xs font-medium text-gray-600">{tag}</span>
      ))}
    </div>
    <div class="mt-4 flex items-center gap-4">
      <a href={`/projects/${slug}`} class="text-sm font-medium text-primary-600 hover:text-primary-800 transition-colors">
        View Case Study &rarr;
      </a>
      {liveUrl && (
        <a href={liveUrl} target="_blank" rel="noopener noreferrer" class="text-sm font-medium text-gray-500 hover:text-gray-700 transition-colors">
          Live Site &nearr;
        </a>
      )}
    </div>
  </div>
</div>
