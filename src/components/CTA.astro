---
interface Props {
  title?: string;
  description?: string;
}

const {
  title = "Ready to start your project?",
  description = "Let's build something great together. Get in touch to discuss your project and see how we can help your business grow online.",
} = Astro.props;
---

<section class="bg-gradient-to-br from-navy-950 to-primary-900 py-20">
  <div class="mx-auto max-w-3xl px-4 text-center sm:px-6 lg:px-8">
    <h2 class="text-3xl font-bold text-white sm:text-4xl">{title}</h2>
    <p class="mt-4 text-lg text-gray-300">{description}</p>
    <div class="mt-8">
      <a
        href="/contact"
        class="inline-block rounded-lg bg-primary-600 px-8 py-3 text-base font-semibold text-white shadow-lg transition-all hover:bg-primary-500 hover:shadow-xl"
      >
        Get in Touch
      </a>
    </div>
  </div>
</section>
