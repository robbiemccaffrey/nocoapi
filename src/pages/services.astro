<BaseLayout
  title="Web Design, Custom Software & Fractional CTO Services | nocoapi, Dublin"
  description="Professional web design, custom software development, and fractional CTO services in Dublin. From brochure sites to enterprise platforms, AI integrations, and startup technical leadership."
>
  <!-- Hero -->
  <section class="py-20">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <div class="mx-auto max-w-3xl text-center">
        <h1 class="text-4xl font-bold text-navy-900 sm:text-5xl">Web Design & Development Services</h1>
        <p class="mt-6 text-lg leading-relaxed text-gray-600">
          Professional web design and development for businesses in Dublin and across Ireland. Fast, modern websites built with performance, SEO, and conversions in mind.
        </p>
      </div>
    </div>
  </section>

  <!-- Services -->
  {services.map((service, i) => (
    <section class:list={["py-16", i % 2 === 0 ? "bg-gray-50" : ""]}>
      <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 gap-12 lg:grid-cols-2 lg:items-center">
          <div class:list={["fade-in", i % 2 !== 0 ? "lg:order-2" : ""]}>
            <div class="mb-4 inline-flex h-14 w-14 items-center justify-center rounded-lg bg-primary-50 text-primary-600">
              <Fragment set:html={service.icon} />
            </div>
            <h2 class="text-3xl font-bold text-navy-900">{service.title}</h2>
            <p class="mt-4 text-lg leading-relaxed text-gray-600">{service.description}</p>
            <ul class="mt-6 space-y-3">
              {service.deliverables.map((item) => (
                <li class="flex items-start gap-3 text-gray-600">
                  <svg class="mt-1 h-5 w-5 shrink-0 text-primary-600" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" d="m4.5 12.75 6 6 9-13.5" />
                  </svg>
                  <span class="text-sm">{item}</span>
                </li>
              ))}
            </ul>
            <div class="mt-8">
              <a href="/contact" class="text-sm font-semibold text-primary-600 hover:text-primary-800 transition-colors">
                Discuss your project &rarr;
              </a>
            </div>
          </div>
          <div class:list={["fade-in flex items-center justify-center", i % 2 !== 0 ? "lg:order-1" : ""]}>
            <div class="w-full max-w-md">
              <Fragment set:html={service.illustration} />
            </div>
          </div>
        </div>
      </div>
    </section>
  ))}

  <!-- Custom Software & Internal Tooling -->
