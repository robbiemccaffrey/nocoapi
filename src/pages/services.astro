---
import BaseLayout from '../layouts/BaseLayout.astro';
import CTA from '../components/CTA.astro';

const services = [
  {
    title: 'Web Design',
    description: 'Custom website designs that look great, reflect your brand, and convert visitors into customers. Every design is built mobile-first and optimised for all screen sizes.',
    deliverables: [
      'Custom design tailored to your brand',
      'Responsive layouts for mobile, tablet, and desktop',
      'UI/UX best practices for conversion',
      'Design revisions until you\'re happy',
    ],
    icon: '<svg class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M9.53 16.122a3 3 0 0 0-5.78 1.128 2.25 2.25 0 0 1-2.4 2.245 4.5 4.5 0 0 0 8.4-2.245c0-.399-.078-.78-.22-1.128Zm0 0a15.998 15.998 0 0 0 3.388-1.62m-5.043-.025a15.994 15.994 0 0 1 1.622-3.395m3.42 3.42a15.995 15.995 0 0 0 4.764-4.648l3.876-5.814a1.151 1.151 0 0 0-1.597-1.597L14.146 6.32a15.996 15.996 0 0 0-4.649 4.763m3.42 3.42a6.776 6.776 0 0 0-3.42-3.42" /></svg>',
  },
  {
    title: 'Web Development',
    description: 'Modern, fast websites and web applications built with production-grade tools. Whether you need a brochure site, a content-driven platform, or a full-stack application, I build it right the first time.',
    deliverables: [
      'Static sites with Astro for maximum speed',
      'Interactive apps with React and TypeScript',
      'Full-stack applications with Node.js backends',
      'CMS integration and content management',
    ],
    icon: '<svg class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M17.25 6.75 22.5 12l-5.25 5.25m-10.5 0L1.5 12l5.25-5.25m7.5-3-4.5 16.5" /></svg>',
  },
  {
    title: 'SEO Optimisation',
    description: 'Get found on Google. I build SEO into every site from the ground up — structured data, semantic HTML, fast load times, and local SEO so your Dublin customers can find you.',
    deliverables: [
      'Technical SEO audit and implementation',
      'On-page optimisation (meta tags, headings, content)',
      'Local SEO for Dublin and Ireland',
      'Structured data (JSON-LD) for rich search results',
    ],
    icon: '<svg class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="m21 21-5.197-5.197m0 0A7.5 7.5 0 1 0 5.196 5.196a7.5 7.5 0 0 0 10.607 10.607Z" /></svg>',
  },
  {
    title: 'Performance Optimisation',
    description: 'Slow websites lose customers. I optimise every site for Core Web Vitals — fast load times, smooth interactions, and stable layouts that keep visitors engaged and boost your search rankings.',
    deliverables: [
      'Core Web Vitals audit and fixes',
      'Image optimisation and modern formats (WebP/AVIF)',
      'Code splitting, lazy loading, and caching',
      'Lighthouse score improvements',
    ],
    icon: '<svg class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="m3.75 13.5 10.5-11.25L12 10.5h8.25L9.75 21.75 12 13.5H3.75Z" /></svg>',
  },
];
---

<BaseLayout
  title="Web Design & Development Services | nocoapi, Dublin"
  description="Professional web design, development, SEO and performance optimisation services in Dublin. Fast, modern websites built to grow your business."
>
  <!-- Hero -->
  <section class="py-20">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <div class="mx-auto max-w-3xl text-center">
        <h1 class="text-4xl font-bold text-navy-900 sm:text-5xl">Web Design & Development Services</h1>
        <p class="mt-6 text-lg leading-relaxed text-gray-600">
          Professional web design and development for businesses in Dublin and across Ireland. Fast, modern websites built with performance, SEO, and conversions in mind.
        </p>
      </div>
    </div>
  </section>

  <!-- Services -->
  {services.map((service, i) => (
    <section class:list={["py-16", i % 2 === 0 ? "bg-gray-50" : ""]}>
      <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 gap-12 lg:grid-cols-2 lg:items-center">
          <div class:list={["fade-in", i % 2 !== 0 ? "lg:order-2" : ""]}>
            <div class="mb-4 inline-flex h-14 w-14 items-center justify-center rounded-lg bg-primary-50 text-primary-600">
              <Fragment set:html={service.icon} />
            </div>
            <h2 class="text-3xl font-bold text-navy-900">{service.title}</h2>
            <p class="mt-4 text-lg leading-relaxed text-gray-600">{service.description}</p>
            <ul class="mt-6 space-y-3">
              {service.deliverables.map((item) => (
                <li class="flex items-start gap-3 text-gray-600">
                  <svg class="mt-1 h-5 w-5 shrink-0 text-primary-600" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" d="m4.5 12.75 6 6 9-13.5" />
                  </svg>
                  <span class="text-sm">{item}</span>
                </li>
              ))}
            </ul>
            <div class="mt-8">
              <a href="/contact" class="text-sm font-semibold text-primary-600 hover:text-primary-800 transition-colors">
                Discuss your project &rarr;
              </a>
            </div>
          </div>
          <div class:list={["fade-in flex items-center justify-center", i % 2 !== 0 ? "lg:order-1" : ""]}>
            <div class="h-64 w-full max-w-md rounded-2xl bg-gradient-to-br from-primary-100 to-primary-50 flex items-center justify-center">
              <div class="text-primary-300">
                <Fragment set:html={service.icon.replace('h-8 w-8', 'h-20 w-20')} />
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
  ))}

  <!-- CTA -->
  <CTA title="Ready to get started?" description="Get in touch to discuss your project. I'll get back to you within 24 hours with a free consultation." />
</BaseLayout>
