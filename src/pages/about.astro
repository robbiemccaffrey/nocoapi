---
import BaseLayout from '../layouts/BaseLayout.astro';
import CTA from '../components/CTA.astro';

const skills = [
  { category: 'Frontend', items: ['React', 'TypeScript', 'Astro', 'Tailwind CSS', 'Vite'] },
  { category: 'Backend', items: ['Node.js', 'Express', 'PostgreSQL', 'MongoDB'] },
  { category: 'Infrastructure', items: ['AWS', 'Terraform', 'Docker', 'Cloudflare'] },
  { category: 'Other', items: ['SEO', 'Performance Optimisation', 'Responsive Design', 'Git'] },
];

const process = [
  { step: '01', title: 'Discovery', description: 'We start by understanding your business, your audience, and what you want your website to achieve.' },
  { step: '02', title: 'Design', description: 'Clean, purposeful designs are created with your brand and conversion goals in mind.' },
  { step: '03', title: 'Build', description: 'Your site is built with modern, fast technologies — performance and SEO baked in from day one.' },
  { step: '04', title: 'Launch', description: 'After thorough testing, your site goes live. I handle deployment, DNS, SSL — the lot.' },
];
---

<BaseLayout
  title="About — Fivesco"
  description="Learn about Fivesco — professional web design and development for businesses that want to grow online."
>
  <!-- Intro -->
  <section class="py-20">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 gap-12 lg:grid-cols-2 lg:items-center">
        <div>
          <h1 class="text-4xl font-bold text-navy-900 sm:text-5xl">About Fivesco</h1>
          <p class="mt-6 text-lg leading-relaxed text-gray-600">
            Fivesco is a freelance web design and development studio focused on building fast, modern websites that help businesses grow online.
          </p>
          <p class="mt-4 text-lg leading-relaxed text-gray-600">
            I've spent years building web applications across FinTech, education, and SaaS — from consumer-facing platforms handling hundreds of thousands of users to focused tools that solve specific problems well.
          </p>
          <p class="mt-4 text-lg leading-relaxed text-gray-600">
            Every project I take on gets the same attention to detail: clean code, fast performance, and a design that actually converts visitors into customers.
          </p>
        </div>
        <div class="flex items-center justify-center">
          <div class="h-80 w-80 rounded-2xl bg-gradient-to-br from-primary-100 to-primary-50 flex items-center justify-center">
            <span class="text-6xl font-bold text-primary-300 font-[family-name:var(--font-display)]">F</span>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Skills -->
  <section class="py-20 bg-gray-50">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <h2 class="text-3xl font-bold text-navy-900 sm:text-4xl text-center">Skills & Technologies</h2>
      <div class="mt-12 grid grid-cols-1 gap-8 sm:grid-cols-2 lg:grid-cols-4">
        {skills.map(({ category, items }) => (
          <div class="fade-in rounded-xl border border-gray-100 bg-white p-6 shadow-sm">
            <h3 class="text-sm font-semibold uppercase tracking-wider text-primary-600">{category}</h3>
            <ul class="mt-4 space-y-2">
              {items.map((item) => (
                <li class="text-sm text-gray-600">{item}</li>
              ))}
            </ul>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Process -->
  <section class="py-20">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <div class="mx-auto max-w-2xl text-center">
        <h2 class="text-3xl font-bold text-navy-900 sm:text-4xl">How I work</h2>
        <p class="mt-4 text-lg text-gray-600">A straightforward process from idea to launch.</p>
      </div>
      <div class="mt-12 grid grid-cols-1 gap-8 sm:grid-cols-2 lg:grid-cols-4">
        {process.map(({ step, title, description }) => (
          <div class="fade-in">
            <div class="text-4xl font-bold text-primary-200">{step}</div>
            <h3 class="mt-2 text-lg font-semibold text-navy-900">{title}</h3>
            <p class="mt-2 text-sm leading-relaxed text-gray-600">{description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Why Fivesco -->
  <section class="py-20 bg-gray-50">
    <div class="mx-auto max-w-3xl px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-3xl font-bold text-navy-900 sm:text-4xl">Why Fivesco?</h2>
      <div class="mt-8 space-y-6 text-left">
        <div class="rounded-xl bg-white p-6 shadow-sm border border-gray-100">
          <h3 class="font-semibold text-navy-900">You work with the person who builds it</h3>
          <p class="mt-2 text-sm text-gray-600">No account managers, no handoffs. You communicate directly with the developer building your site.</p>
        </div>
        <div class="rounded-xl bg-white p-6 shadow-sm border border-gray-100">
          <h3 class="font-semibold text-navy-900">Performance isn't an afterthought</h3>
          <p class="mt-2 text-sm text-gray-600">Speed, SEO, and accessibility are built in from the start — not bolted on at the end.</p>
        </div>
        <div class="rounded-xl bg-white p-6 shadow-sm border border-gray-100">
          <h3 class="font-semibold text-navy-900">Production-grade code</h3>
          <p class="mt-2 text-sm text-gray-600">Your site is built with the same tools and standards used by top tech companies. Clean, maintainable, and built to last.</p>
        </div>
      </div>
    </div>
  </section>

  <CTA />
</BaseLayout>
